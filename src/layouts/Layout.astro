---
import Debug from "../components/Debug.astro";
import Footer from "./Footer.astro";
interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Louis Andrew's Porfolio Site" />
    <meta name="viewport" content="width=device-width" />

    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png" />
    <link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png" />
    <link rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png" />
    <link rel="manifest" href="/site.webmanifest" />
    <link rel="stylesheet" href="/Varys.css" />

    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Montserrat:wght@400;500;600;700&family=Plus+Jakarta+Sans:wght@200;300;400;700&display=swap"
      rel="stylesheet"
    />

    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body>
    <main>
      <slot />
    </main>

    <Footer />
    <footer></footer>
    <Debug />
  </body>
</html>

<style lang="postcss" is:global>
body {
  @apply w-full grid place-items-center bg-mfed-background text-mfed-secondary container mx-auto
    px-10 lg:px-28 xl:px-40 2xl:max-w-5xl 2xl:px-0 font-body tracking-widest font-light;
}

h1 {
  @apply text-3xl uppercase text-white font-bold font-sans;
}

h3 {
  @apply text-lg font-sans text-mfed-secondary font-semibold;
}

h4 {
  @apply text-sm text-gray-200 tracking-[.2rem] font-medium font-sans;
}

a {
  @apply relative duration-200 z-10 underline decoration-mfed-decoration decoration-2 md:no-underline inline-block;

  &::before {
    @apply opacity-0 md:opacity-100 left-[-2px] right-0 content-[''] absolute duration-200 h-[2px] bottom-0 bg-mfed-decoration z-[-1];
  }

  &:hover {
    @apply sm:text-inherit md:text-mfed-background;

    &::before {
      @apply h-[calc(100%+2px)] bottom-[-1px];
    }
  }
}

header {
  @apply py-7 w-full;
}

main {
  @apply py-14;
}

.card {
  @apply bg-mfed-background-accent rounded;
}
</style>
